<!-- COMBINED POSTERS & FLYERS SECTION -->
<div class="text-container" style="margin-top: 2rem; margin-bottom: 2rem;">
  <h1 class="title-main roboto" style="color: black;">Posters & Flyers</h1>
</div>

<div class="row g-4" style="padding-top: 1rem;">
  <% posters = [
    { title: "Zine Party", image: "Zineposter2-min.png", alt: "Zine Party" },
    { title: "DAARONS X RILES", image: "Daaronsmock-min.png", alt: "Daarons x Riles" },
    { title: "FOLIA X LOVED", image: "Foliamockup-min.png", alt: "Folia Flyer" },
    { title: "Halloween at HVEN", image: "Mockup1234-min.png", alt: "HVEN Flyer" },
    { title: "Goontex Inv Card", image: "Goon_product-min.png", alt: "GOON Invitation" }
  ] %>

  <% posters.each do |poster| %>
    <div class="col-12 col-md-6 text-center poster-container">
      <h2 class="title-main roboto" style="color: black; margin-bottom: 0.75rem;"><%= poster[:title] %></h2>
      <a href="#" class="project-image">
        <%= image_tag "projects/#{poster[:image]}", alt: poster[:alt], class: 'image img-fluid poster-image' %>
      </a>
    </div>
  <% end %>
</div>

<style>
  /* Add spacing around each poster image */
  .poster-container {
    padding: 1rem; /* space around each poster block */
  }

  .poster-image {
    padding: 0.5rem; /* small padding around image inside block */
    border-radius: 8px; /* optional, soft corners */
    display: inline-block;
  }

  /* Optional: spacing between title and image */
  .poster-container h2 {
    margin-bottom: 1rem;
  }
</style>



<div class="tech-icons">
  <%= image_tag 'projects/Adobe Illustrator.svg', alt: 'Illustrator', class: 'tech-icon' %>
   <%= image_tag 'projects/Adobe Photoshop.svg', alt: 'Photoshop', class: 'tech-icon' %>
   <%= image_tag 'projects/Adobe Premiere Pro.svg', alt: 'PremierePro', class: 'tech-icon' %>
 </div>
 </div>
 <div>
  <%= partial 'partials/contactme' %>
 </div>

 <style>
  .photo-banner {
    width: 100%;
    overflow: hidden;
    display: flex;
    justify-content: center;
    align-items: center;
    margin-bottom: 2rem;
  }

  .photo-banner .banner-image {
    width: 100%;
    max-height: 400px;
    object-fit: cover;
  }

  /* Mobile: reduce banner height */
  @media (max-width: 768px) {
    .photo-banner .banner-image {
      max-height: 250px;
    }
  }

  @media (max-width: 480px) {
    .photo-banner .banner-image {
      max-height: 200px;
    }
  }
</style>
