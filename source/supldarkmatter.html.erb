<body style="background-color: black;">
  <div>
    <%= partial 'partials/navbar' %>
  </div>

  <!-- Image with text and logo overlay -->
  <div class="image-container" style="background-color: black; position: relative; max-height: 550px; overflow: hidden; align-items: center; background-size: cover; background-position: center; object-fit: cover;">
    <!-- Main Image with reduced height -->
    <%= image_tag 'projects/Stawell.jpeg', alt: 'SUPL', class: 'image', style: 'width: 100%; height: 650px; object-fit: cover;' %>

    <!-- Text overlay on the top-left with padding -->
    <div class="overlay-content" style="position: absolute; top: 2.5%; left: 5%; color: black; text-align: left;">
      <h2 class="subtitle roboto-regular" style="color: white; font-size: 5rem; margin-bottom: 1rem;"><strong>SUPL</strong></h2>
      <h2 class="subtitle roboto-regular" style="color: white; margin-bottom: 0rem;">Seeks to <strong>unravel the mystery</strong> of <strong>Dark Matter</strong> using a <strong>state-of-the-art underground lab</strong> 1km below Stawell, Victoria.</h2>
      <h2 class="subtitle roboto-regular" style="color: white; margin-bottom: 0rem;">Designed to <strong>minimize cosmic interference</strong> and <strong>join the global search</strong> for this elusive particle,</h2>
      <h2 class="subtitle roboto-regular" style="color: white; margin-bottom: 0rem;">making it one of the <strong>most advanced labs in the southern hemisphere.</strong></h2>
      <div class="button-container" style="margin-top: 2rem;">
        <a class="btn1 btn-ghost11 subtitle roboto-regular" style="color: white;" href="https://www.supl.org.au/" target="_blank">More Info</a>
      </div>
    </div>

    <!-- Brand Logo in the bottom-right corner -->
    <div class="logo-container" style="position: absolute; bottom: 5%; right: 5%; width: 150px;">
      <%= image_tag 'projects/SuplLogo2.png', alt: 'SUPL Logo', class: 'image' %>
    </div>
  </div>

  <div class="main-container1" style="background-color: black;">
    <div class="container my-5">

      <!-- Bootstrap Carousel -->
      <div id="carouselExampleIndicators" class="carousel slide" data-bs-ride="carousel" data-bs-interval="2000">
        <ol class="carousel-indicators">
          <li data-bs-target="#carouselExampleIndicators" data-bs-slide-to="0" class="active"></li>
          <li data-bs-target="#carouselExampleIndicators" data-bs-slide-to="1"></li>
          <li data-bs-target="#carouselExampleIndicators" data-bs-slide-to="2"></li>
          <li data-bs-target="#carouselExampleIndicators" data-bs-slide-to="3"></li>
        </ol>

        <!-- Carousel items -->
        <div class="carousel-inner">
          <div class="carousel-item active">
            <%= image_tag 'projects/ProblemDef.png', class: 'd-block w-100', alt: 'Problem' %>
          </div>
          <div class="carousel-item">
            <%= image_tag 'projects/InitialResearch.png', class: 'd-block w-100', alt: 'Initial Research' %>
          </div>
          <div class="carousel-item">
            <%= image_tag 'projects/UserResearch.png', class: 'd-block w-100', alt: 'User Research' %>
          </div>
          <div class="carousel-item">
            <%= image_tag 'projects/Persona.png', class: 'd-block w-100', alt: 'Persona' %>
          </div>
        </div>

        <!-- Arrow controls -->
        <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-bs-slide="prev">
          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
          <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-bs-slide="next">
          <span class="carousel-control-next-icon" aria-hidden="true"></span>
          <span class="sr-only">Next</span>
        </a>
      </div>

      <div class="d-flex justify-content-between align-items-center image-group" style="margin-top: 2rem; margin-bottom: 2rem;">
        <a href="#" class="project-image">
          <%= image_tag 'projects/HMW.png', alt: 'Kollab', class: 'image' %>
        </a>
        <a href="#" class="project-image">
          <%= image_tag 'projects/Solution.png', alt: 'Kollab', class: 'image' %>
        </a>
      </div>

      <!-- Container for other content -->
      <div class="main-container2" style="margin-top: 2rem;">
        <div>
          <a href="#" class="project-image">
            <%= image_tag 'projects/Prototyping.png', alt: 'Solution', class: 'image' %>
          </a>
        </div>
        <div>
          <a href="#" class="project-image">
            <%= image_tag 'projects/Helmet.png', alt: 'Solution', class: 'image' %>
          </a>
        </div>
        <div style="margin-top: 2rem;">
          <a href="#" class="project-image">
            <%= image_tag 'projects/Framework.png', alt: 'Solution', class: 'image' %>
          </a>
        </div>
        <div>
          <a href="#" class="project-image">
            <%= image_tag 'projects/ApplicationProto.png', alt: 'Solution', class: 'image' %>
          </a>
        </div>
        <div>
          <a href="#" class="project-image">
            <%= image_tag 'projects/Explore.png', alt: 'Solution', class: 'image' %>
          </a>
        </div>
        <div class="project-image-group1" style="margin-top: 2rem;">
          <a href="#" class="project-image2">
            <%= image_tag 'projects/ScreenShotSUPL.png', alt: 'Solution', class: 'image' %>
          </a>
          <a href="#" class="project-image2">
            <%= image_tag 'projects/ScreenShotMap.png', alt: 'Solution', class: 'image' %>
          </a>
          <a href="#" class="project-image2">
            <%= image_tag 'projects/ScreenShotHelmet.png', alt: 'Solution', class: 'image' %>
          </a>
          <a href="#" class="project-image2">
            <%= image_tag 'projects/ScreenShotNFT.png', alt: 'Solution', class: 'image' %>
          </a>
        </div>
      </div>
    </div>

    <!-- Tech icons -->
    <div class="tech-icons mt-5">
      <%= image_tag 'projects/HTML5.svg', alt: 'HTML5', class: 'tech-icon' %>
      <%= image_tag 'projects/CSS3.svg', alt: 'CSS3', class: 'tech-icon' %>
      <%= image_tag 'projects/JavaScript.svg', alt: 'JavaScript', class: 'tech-icon' %>
      <%= image_tag 'projects/RubyonRails.svg', alt: 'Ruby on Rails', class: 'tech-icon' %>
      <%= image_tag 'projects/Ruby.svg', alt: 'Ruby', class: 'tech-icon' %>
    </div>

    <div class="tech-icons mt-3">
      <%= image_tag 'projects/Adobe Illustrator.svg', alt: 'Illustrator', class: 'tech-icon' %>
      <%= image_tag 'projects/Figma.svg', alt: 'Figma', class: 'tech-icon' %>
      <%= image_tag 'projects/Bootstrap.svg', alt: 'Bootstrap', class: 'tech-icon' %>
    </div>
  </div>

  <!-- Footer -->
  <footer class="py-0.5" style="background-color: black; margin-top: 2rem; margin-bottom: 2rem;">
    <div class="container text-center">
      <div class="d-flex flex-column align-items-center">

        <!-- Email -->
        <button id="copy-email-btn" type="button"
          style="background: transparent; border: none; color: white; font-size: 0.9rem; font-weight: 700; cursor: pointer; text-transform: uppercase; font-family: 'Roboto', sans-serif;">
          ALLFORDCADEYRN@GMAIL.COM →
        </button>

        <!-- Socials -->
        <a href="https://github.com/KAYYWHAT" target="_blank" class="footer-link">GITHUB →</a>
        <a href="https://www.instagram.com/kayywhat/" target="_blank" class="footer-link">INSTAGRAM →</a>
        <a href="https://www.linkedin.com/in/cadeyrnrattur" target="_blank" class="footer-link">LINKEDIN →</a>

        <!-- Back to Top -->
        <button id="back-to-top" type="button"
          style="margin-top: 1rem; background: transparent; border: none; color: white; font-size: 0.9rem; font-weight: 700; cursor: pointer; text-transform: uppercase; font-family: 'Roboto', sans-serif;">
          BACK TO TOP ↑
        </button>

      </div>
    </div>
  </footer>

  <style>
    .footer-link, #copy-email-btn, #back-to-top {
      text-decoration: none;
      color: white;
      font-size: 0.9rem;
      font-weight: 700;
      font-family: 'Roboto', sans-serif;
      margin: 0.2rem 0;
    }

    .footer-link:hover, .footer-link:focus,
    #copy-email-btn:hover, #copy-email-btn:focus,
    #back-to-top:hover, #back-to-top:focus {
      text-decoration: underline;
      text-underline-offset: 3px;
      color: white !important;
    }
  </style>

  <script defer>
    document.addEventListener("DOMContentLoaded", function () {
      // Copy email
      const emailBtn = document.getElementById("copy-email-btn");
      if (emailBtn) {
        emailBtn.addEventListener("click", () => {
          navigator.clipboard.writeText("allfordcadeyrn@gmail.com")
            .then(() => {
              emailBtn.innerText = "COPIED!";
              emailBtn.style.color = "#155724";
              setTimeout(() => {
                emailBtn.innerText = "ALLFORDCADEYRN@GMAIL.COM →";
                emailBtn.style.color = "white";
              }, 2000);
            })
            .catch(() => alert("Failed to copy"));
        });
      }

      // Back to top
      const backBtn = document.getElementById("back-to-top");
      if (backBtn) {
        backBtn.addEventListener("click", () => {
          window.scrollTo({ top: 0, left: 0, behavior: 'smooth' });
        });
      }
    });
  </script>
</body>
